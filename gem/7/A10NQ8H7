#ifndef _RPG_H_
#define _RPG_H_


/*-------------------------------------------------------*/
/* åƒè€ƒ struct.h                                         */
/* ----------------------------------------------------- */
/* ä½¿ç”¨è€…éŠæˆ²è¨˜éŒ„ .RPG struct : 512 bytes                */
/* ----------------------------------------------------- */


typedef struct
{
  char usertitle[12];       /* é ­éŠœ */
  char username[24];        /* æš±ç¨± */

  int level;                /* ç­‰ç´š(çµ•å°å€¼) (+)è½‰è·å¾Œçš„ç­‰ç´š (-)è½‰è·å‰çš„ç­‰ç´š */
  int alliance;             /* é™£ç‡Ÿ(çµ•å°å€¼) (+)å–„è‰¯ (-)é‚ªæƒ¡ */
  int exp;                  /* ç¶“é©—å€¼ */

                            /* èƒ½é‡(ç”¨2charç¸®å¯«) */
  int hp;                   /* é«”åŠ› health point */
  int mp;                   /* éˆåŠ› mana point   */
  int mv;                   /* å‹•åŠ› moving point */
  int po;                   /* å…§åŠ› power point  */

                            /* èƒ½é‡ä¸Šé™ */
  int maxhp;                /*  è¡€  */
  int maxmp;                /* éˆåŠ› */
  int maxmv;                /* å‹•åŠ› */
  int maxpo;                /* å…§åŠ› */

                            /* å±¬æ€§(ç”¨3charç¸®å¯«) */
  int str;                  /* åŠ›é‡ strength */
  int inl;                  /* æ™ºåŠ› intelligence */
  int wis;                  /* æ™ºæ…§ wisdom */
  int dex;                  /* æ•æ· dexterity */
  int con;                  /* é«”æ ¼ constitution */
  int luc;                  /* é‹æ°£ luck */
  int cha;                  /* é­…åŠ› charisma */

                            /* éš±è—ç‰¹è³ª(ç”¨4charç¸®å¯«) */
  int calm;                 /* å†·éœ calm */
  int cour;                 /* å‹‡æ°£ courage */
  int heal;                 /* å¥åº· health */
  int lern;                 /* å­¸ç¿’ learn */
  int mood;                 /* å¿ƒæƒ… mood */

                            /* äº”å¤§è³‡æº(ç”¨å–®æ•¸) */
  int money;                /* éŠ€å¹£ */
  int gold;                 /* é»ƒé‡‘ */
  int gem;                  /* å¯¶çŸ³ */
  int wood;                 /* æœ¨æ */
  int iron;                 /* ç¤¦çŸ³ */

