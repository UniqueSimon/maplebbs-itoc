: src/maple/rpg.c æ–°å¢æ­¤ç¨‹å¼

/*-------------------------------------------------------*/
/* rpg.c        ( NTHU CS MapleBBS Ver 3.00 )            */
/*-------------------------------------------------------*/
/* target : rpg routines                                 */
/* create : 01/03/16                                     */
/* update :   /  /                                       */
/* author : itoc.bbs@bbs.tnfsh.tn.edu.tw                 */
/*-------------------------------------------------------*/


#include "bbs.h"


/* ----------------------------------------------------- */
/* (.RPG) å†’éšªè€…å¸³è™Ÿ (account) I/O                       */
/* ----------------------------------------------------- */


int
rpg_load(rpg, userid)
  RPG *rpg;
  char *userid;
{
  int fd;

  usr_fpath((char *) rpg, userid, FN_RPG);
  fd = open((char *) rpg, O_RDONLY);
  if (fd >= 0)
  {
    /* Thor.990416: ç‰¹åˆ¥æ³¨æ„, æœ‰æ™‚ .RPGçš„é•·åº¦æœƒæ˜¯0 */
    read(fd, rpg, sizeof(RPG));
    close(fd);
  }
  return fd;
}


void
rpg_save(rpg, userid)
  RPG *rpg;
  char *userid;
{
  int fd;
  char fpath[64];

  usr_fpath(fpath, userid, FN_RPG);
  fd = open(fpath, O_WRONLY | O_CREAT, 0600);
  if (fd >= 0)
  {
    write(fd, rpg, sizeof(RPG));
    close(fd);
  }
}


/* ----------------------------------------------------- */
/* (.RPG) å†’éšªè€…å¸³è™Ÿ (account) subroutine                */
/* ----------------------------------------------------- */


void
rpg_apply(u, userid)
  RPG *u;
  char *userid;
{
  strcpy(u->usertitle, "æ–°å†’éšªè€…");
  strcpy(u->username, userid);

  u->level = -1;
  u->alliance = u->exp = 0;
  u->hp = u->mp = u->mv = u->po =
    u->maxhp = u->maxmp = u->maxmv = u->maxpo = 100;
  u->str = u->inl = u->wis = u->dex = u->con = u->luc = u->cha = 10;
  u->calm = u->cour = u->heal = u->lern = u->mood = 0;
  u->money = u->gold = u->gem = u->wood = u->iron = 0;
  u->weapon = u->helm = u->amulet = u->armor = u->glove = 0;
  u->ring = u->bracer = u->belt = u->pant = u->shoe = 0;
}


static int
rpg_get(msg, rpg, userid)
  char *msg;
  RPG *rpg;
  char *userid;
{
  outz("â˜… è¼¸å…¥é¦–å­—æ¯å¾Œï¼Œ å¯ä»¥æŒ‰ç©ºç™½éµè‡ªå‹•æœå°‹");

  /* --------------------------------------------------- */
  /* name complete for user ID                           */
  /* --------------------------------------------------- */
  /* return value :                                      */
  /*  0: ä½¿ç”¨ç›´æ¥æŒ‰ enter ==> cancel                     */
  /* -1: bad user id                                     */
  /*  1: current user id                                 */
  /* --------------------------------------------------- */

  if (!vget(1, 0, msg, userid, IDLEN + 1, GET_USER))
    return 0;

  if (rpg_load(rpg, userid) >= 0)
    return 1;

  vmsg(err_uid);
  return -1;
}


static void
rpg_show(u, adm)
  RPG *u;
  int adm;                      /* 0: user info/query  1: admin */
{
  int alli;
  char *camp;

  clrtobot();

  outs("\n        \033[30;41mâ”¬â”´â”¬â”´â”¬â”´\033[m  \033[45mâ•°â•¦â•¦â•®â•­â•¦â•â•®"
    "â•”â•¦â•â•®â•­â•¦â•â•®\033[m  \033[30;41mâ”¬â”´â”¬â”´â”¬â”´\033[m\n"
    "        \033[30;41mâ”´â”¬â”´â”¬â”´â”¬\033[m  \033[1;37;45m  â• â•£  â• â•£"
    "  â•‘â• â•¬â•£  â• â•£  â•‘\033[m  \033[30;41mâ”´â”¬â”´â”¬â”´â”¬\033[m\n"
    "        \033[30;41mâ”¬â”´â”¬â”´â”¬â”´\033[m  \033[45m  â• â•£  â• â•£  â•‘"
    "â• â•£â•¯  â• â•£  â•‘\033[m  \033[30;41mâ”¬â”´â”¬â”´â”¬â”´\033[m\n"
    "        \033[30;41mâ”´â”¬â”´â”¬â”´â”¬\033[m  \033[1;30;45mâ•°â•©â•©â•®â•šâ•"
    "  â•°â•šâ•    â•°â•©â•â•¯\033[m  \033[30;41mâ”´â”¬â”´â”¬â”´â”¬\033[m\n");


  alli = u->alliance;
  if (alli > 100)
  {
    if (alli > 700)
      camp = "\033[41må¤§å¥½äºº\033[m";
    else if (alli > 400)
      camp = "\033[1;31må¥½äºº\033[m";
    else
      camp = "\033[31mæœ‰ä¸€é»é»å–„è‰¯\033[m";
  }
  else if (alli < -100)
  {
    if (alli < -700)
      camp = "\033[45mä½ å¯¦åœ¨å¤ªå£äº†\033[m";
    else if (alli < -400)
      camp = "\033[1;35mè »è³¤çš„\033[m";
    else
      camp = "\033[35mæœ‰ä¸€é»é»é‚ªæƒ¡\033[m";
  }
  else
    camp = "ä¸­ç«‹ç„¡æ¯”";

  prints("\nèƒ½é‡ï¼šé«”åŠ› %5d/%5d  éˆåŠ› %5d/%5d  å‹•åŠ› %5d/%5d  å…§åŠ› %5d/%5d\n",
    u->hp, u->maxhp, u->mp, u->maxmp, u->mv, u->maxmv, u->po, u->maxpo);

  prints("\n\033[1;33m[%s] \033[36m%s\033[m",
    u->usertitle, u->username);

  prints("\nè€ƒæ ¸ï¼šç­‰ç´š %5d  ç¶“é©— %5d  é™£ç‡Ÿ %s  %sè½‰è·",
    abs(u->level), u->exp, camp, u->level > 0 ? "å·²" : "æœª");

  prints("\nå±¬æ€§ï¼šåŠ›é‡ [%3d]  æ™ºåŠ› [%3d]  æ™ºæ…§ [%3d]  æ•æ· [%3d]",
    u->str, u->inl, u->wis, u->dex);

  prints("\nå±¬æ€§ï¼šé«”æ ¼ [%3d]  é‹æ°£ [%3d]  é­…åŠ› [%3d]",
    u->con, u->luc, u->cha);

  prints("\nè³‡æºï¼šéŠ€å¹£ %5d  é»ƒé‡‘ %5d", u->money, u->gold);

  prints("\nè³‡æºï¼šå¯¶çŸ³ %5d  æœ¨æ %5d  ç¤¦çŸ³ %5d", u->gem, u->wood, u->iron);

  if (adm)
  {
    prints("\nç‰¹è³ªï¼šå†·éœ %5d  å‹‡æ°£ %5d  å¥åº· %5d  å­¸ç¿’ %5d  å¿ƒæƒ… %5d",
      u->calm, u->cour, u->heal, u->lern, u->mood);

    prints("\nè£å‚™ï¼šæ­¦å™¨ %5d  é ­ç›” %5d  é …éŠ %5d  ç›”ç”² %5d  æ‰‹å¥— %5d",
      u->weapon, u->helm, u->amulet, u->armor, u->glove);

    prints("\nè£å‚™ï¼šæˆ’æŒ‡ %5d  è‡‚ç«  %5d  çš®å¸¶ %5d  è¤²å­ %5d  é‹å­ %5d",
      u->ring, u->bracer, u->belt, u->pant, u->shoe);
  }

  outs("\n\n        \033[30;41mâ”´â”¬â”´â”¬â”´â”¬â”´â”¬â”´â”¬â”´â”¬â”´â”¬â”´â”¬â”´â”¬"
    "â”´â”¬â”´â”¬â”´â”¬â”´â”¬â”´â”¬â”´â”¬\033[m");
}


static void
rpg_setup(u, userid, adm)
  RPG *u;
  char *userid;
  int adm;
{
  RPG x;
  int i, num;
  char *str, buf[80];

  rpg_show(u, adm);
  memcpy(&x, u, sizeof(RPG));

  if (vans("è¨­å®š 1)è³‡æ–™ Q)å–æ¶ˆ [Q] ") != '1')
    return;

  move(i = 3, 0);
  clrtobot();

  str = x.usertitle;
  while (1)
  {
    if (vget(i, 0, "é ­    éŠœï¼š", str, sizeof(x.usertitle), GCARRY))
      break;
  }

  i++;
  str = x.username;
  while (1)
  {
    if (vget(i, 0, "æš±    ç¨±ï¼š", str, sizeof(x.username), GCARRY))
      break;
  }

  if (adm)
  {
    for (;;)
    {
      /* é‚„æœ‰æ”¹åˆ¥çš„æ¬„ä½çš„è©±ï¼Œè‡ªå·±æ”¹å¯«ç¨‹å¼ */
      adm = vans("1)ç­‰ç´š 2)é™£ç‡Ÿ 3)ä¸Šé™ [Q] ");

      if (adm == '1')
      {
        sprintf(buf, "%d", u->level);
        vget(i, 0, "ç­‰ç´šï¼š", buf, 6, GCARRY);
        x.level = atoi(buf);
      }
      else if (adm == '2')
      {
        sprintf(buf, "%d", u->alliance);
        vget(i, 0, "é™£ç‡Ÿï¼š", buf, 6, GCARRY);
        x.alliance = atoi(buf);
      }
      else if (adm == '3')
      {
        for (;;)
        {
          num = vans("[ä¸Šé™] s)åŠ›é‡ i)æ™ºåŠ› w)æ™ºæ…§ d)æ•æ· "
            "c)é«”æ ¼ l)é‹æ°£ a)é­…åŠ› [Q] ");

          if (num == 's')
          {
            sprintf(buf, "%d", u->str);
            vget(i, 0, "åŠ›é‡ï¼š", buf, 6, GCARRY);
            if (num = atoi(buf) > 0)
              x.str = num;
          }
          else if (num == 'i')
          {
            sprintf(buf, "%d", u->inl);
            vget(i, 0, "æ™ºåŠ›ï¼š", buf, 6, GCARRY);
            if (num = atoi(buf) > 0)
              x.inl = num;
          }
          else if (num == 'w')
          {
            sprintf(buf, "%d", u->wis);
            vget(i, 0, "æ™ºæ…§ï¼š", buf, 6, GCARRY);
            if (num = atoi(buf) > 0)
              x.wis = num;
          }
          else if (num == 'd')
          {
            sprintf(buf, "%d", u->dex);
            vget(i, 0, "æ•æ·ï¼š", buf, 6, GCARRY);
            if (num = atoi(buf) > 0)
              x.dex = num;
          }
          else if (num == 'c')
          {
            sprintf(buf, "%d", u->con);
            vget(i, 0, "é«”æ ¼ï¼š", buf, 6, GCARRY);
            if (num = atoi(buf) > 0)
              x.con = num;
          }
          else if (num == 'l')
          {
            sprintf(buf, "%d", u->luc);
            vget(i, 0, "é‹æ°£ï¼š", buf, 6, GCARRY);
            if (num = atoi(buf) > 0)
              x.luc = num;
          }
          else if (num == 'a')
          {
            sprintf(buf, "%d", u->cha);
            vget(i, 0, "é­…åŠ›ï¼š", buf, 6, GCARRY);
            if (num = atoi(buf) > 0)
              x.cha = num;
          }
          else
          {
            break;
          }
        }
      }
      else
      {
        break;
      }
    }
  }

  if (vans(msg_sure_ny) != 'y')
    return;

  memcpy(u, &x, sizeof(x));
  rpg_save(u, userid);
  utmp_admset(acct_userno(userid), STATUS_DATALOCK);
}


/* ----------------------------------------------------- */
/* é¸å–®æŒ‡ä»¤                                              */
/* ----------------------------------------------------- */


int
r_info()
{
  move(1, 0);
  rpg_setup(&crpg, cuser.userid, 0);
  return 0;
}


int
r_query()
{
  int ans;
  char userid[IDLEN + 1];
  RPG rpg;

  move(1, 0);
  clrtobot();

  if (HAS_PERM(PERM_ALLACCT))
  {
    while (ans = rpg_get(msg_uid, &rpg, userid))
    {
      if (ans > 0)
        rpg_setup(&rpg, userid, 1);
    }
  }
  else
  {
    while (ans = rpg_get(msg_uid, &rpg, userid))
    {
      if (ans > 0)
        rpg_show(&rpg, 0);
    }
  }

  return 0;
}


int
r_apply()               /* è‡ªæ®ºé‡ä¾† */
{
  if (vans("æ‚¨å°‡é‡æ–°é–‹å§‹ä¸€æ®µæ–°çš„æ—…é€”(Y/N)ï¼Ÿ[N] ") != 'y')
    return XEASY;

  rpg_apply(&crpg, cuser.userid);
  rpg_save(&crpg, cuser.userid);
  return 0;
}

