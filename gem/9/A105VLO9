  prints(" â”‚ æœ¬å±€å¾—åˆ† â”‚  %-13d   â”‚  %-13d   â”‚\n", ts[0].score, ts[1].score);
  prints(" â”œâ”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤\n");
  prints(" â”‚ çµæŸåŸå›  â”‚ %-37sâ”‚\n", over_reason(GameOver));
  prints(" â””â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜\n");
  prints(" æŒ‰ <\033[1;32mEnter\033[m> ç¹¼çºŒéŠæˆ², <\033[1;32m^C ^D\033[m> é€€å‡ºéŠæˆ². ");

  delay = GameOver;  /* å€Ÿç”¨ delay ä¿å­˜çœŸæ­£ over åŸå› ï¼Œä»¥å…æ–·ç·šäº†ä»ç„¶è¦é‡é–‹ */
  GameOver = GAME_WAIT;

