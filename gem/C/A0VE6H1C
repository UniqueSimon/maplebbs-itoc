static int
class_explain(xo)
  XO *xo;
{
  int mode, chn;
  char *img, *str;
  short *chp, *chx;
  char fpath[64], brdname[BNLEN + 1], *blist;
  BRD *brd;

  chp = (short *) xo->xyz + xo->pos;
  chn = *chp;

  if (chn >= 0)     /* ä¸€èˆ¬çœ‹æ¿ */
  {
    brd = bshm->bcache + chn;
    blist = brd->BM;
    if (!(blist[0] > ' ' && is_bm(blist, cuser.userid)))
      return XO_NONE;
  }
  else              /* åˆ†é¡ç¾¤çµ„ */
  {
    if (!HAS_PERM(PERM_ALLBOARD))
      return XO_NONE;
  }

  mode = vans("çœ‹æ¿èªªæ˜ (D)åˆªé™¤ (E)ä¿®æ”¹ (Q)å–æ¶ˆï¼Ÿ[E] ");
  if (mode != 'q')
  {
    if (chn >= 0)
    {
      brd_fpath(fpath, brd->brdname, fn_explain);
    }
    else
    {
      img = class_img;
      chx = (short *) img + (CH_END - chn);
      str_ncpy(brdname, img + *chx, IDLEN + 1);
      if (str = strchr(brdname, '/'))         /* skip '/' */
        *str = '\0';
      sprintf(fpath, "run/%s.%s", fn_explain, brdname);
    }

    if (mode == 'd')
    {
      unlink(fpath);
    }
    else
    {
      if (vedit(fpath, 0))  /* Thor.981020: æ³¨æ„è¢«talkçš„å•é¡Œ */
        vmsg(msg_cancel);
      return class_head(xo);
    }
  }
  return XO_FOOT;
}

