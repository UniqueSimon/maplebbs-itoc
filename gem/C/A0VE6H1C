static void
preview_file(fpath, skipline)
  char *fpath;
  int skipline;
{
  int i;
  char buf[ANSILINELEN], *str;
  FILE *fp;

  if (!(fp = fopen(fpath, "r")))
    return;

  for (i = 0; i < skipline; i++)        /* ç•¥éå‰å¹¾è¡Œ */
    fgets(buf, ANSILINELEN, fp);

  for (i = 0; i < 3;)                   /* é è¦½ä¸‰è¡Œ */
  {
    if (fgets(buf, SCR_WIDTH + 1, fp))
    {
      if (*buf == '>' || *buf == '\n')
        continue;
      if (i == 2)
      {
        if (str = strchr(fpath, '\n'))
          *str = '\0';  /* æŠŠ '\n' æ›æˆ '\0'ï¼Œé¿å…æŠŠ foot åƒäº† */
      }
      outx(buf);
      i++;
    }
    else
      break;
  }

  outs(str_ransi);      /* é‚„åŸ ansi-code é¿å…æ–‡ç« è£¡é¢æ²’æœ‰é‚„åŸ */
  fclose(fp);
}


static void
preview_userid(userid)
  char *userid;
{
  ACCT acct;

  acct_load(&acct, userid);
  prints("%s(%s) ä¸Šç«™ %d æ¬¡ï¼Œæ–‡ç«  %d ç¯‡ï¼Œ%sé€šéèº«åˆ†èªè­‰\n",
    userid, acct.username, acct.numlogins, acct.numposts,
    acct.userlevel & PERM_VALID ? "å·²ç¶“" : "å°šæœª");
  prints("ä¸Šæ¬¡(%s)ä¾†è‡ª(%s)", Btime(&acct.lastlogin), acct.lasthost);
}


static void
preview_tip()
{
  int i, j, msg_num;
  char msg[128];
  FILE *fp;

  if (!(fp = fopen(FN_ETC_TIP, "r")))
    return;

  fgets(msg, 128, fp);
  msg_num = atoi(msg);         /* ç¬¬ä¸€è¡Œè¨˜éŒ„ç¸½ç¯‡æ•¸ */
  i = time(0) % msg_num + 1;
  j = 0;

  while (j < i)                        /* å–ç¬¬ i å€‹ tip */
  {
    fgets(msg, 128, fp);
    if (msg[0] == '#')
      j++;
  }

  fgets(msg, 128, fp);
  outs(msg);
  fgets(msg, 128, fp);
  outs(msg);
  fclose(fp);
}


static void
xo_knee(xo, zone)
  XO *xo;
  int zone;
{
  int cur;
  char fpath[64];

  if (XO_TALL == b_lines - 3)
    return;

  for (cur = b_lines - 4; cur < b_lines; cur++)
  {
    move(cur, 0);
    clrtoeol();
  }
  move(b_lines - 4, 0);
  prints("%s\n", msg_seperator);

  cur = xo->pos - xo->top;

  switch (zone)
  {
  /* ------------ */
  /* é è¦½çœ‹æ¿èªªæ˜ */
  /* ------------ */
  case XZ_CLASS:
    {
      short *chp;
      int chn;
      chp = (short *) xo->xyz + xo->pos;
      chn = *chp;
      if (chn >= 0)     /* ä¸€èˆ¬çœ‹æ¿ */
      {
        extern BCACHE *bshm;
        brd_fpath(fpath, (bshm->bcache + chn)->brdname, fn_explain);
      }
      else              /* åˆ†é¡ç¾¤çµ„ */
      {
        extern char *class_img;
        char *img, *str;
        short *chx;
        char brdname[IDLEN + 1];
        img = class_img;
        chx = (short *) img + (CH_END - chn);
        str_ncpy(brdname, img + *chx, IDLEN + 1);
        if (str = strchr(brdname, '/'))     /* skip '/' */
          *str = '\0';
        sprintf(fpath, "run/%s.%s", fn_explain, brdname);
      }
      preview_file(fpath, 0);
    }
    break;

  /* ------------ */
  /* é è¦½ Query   */
  /* ------------ */
  case XZ_ULIST:
    {
      typedef UTMP *pickup;
      extern pickup ulist_pool[];
      preview_userid(ulist_pool[xo->pos]->userid);
    }
    break;

  case XZ_PAL:
    preview_userid(((PAL *) xo_pool + cur)->userid);
    break;

#ifdef HAVE_ALOHA
  case XZ_ALOHA:
    preview_userid(((ALOHA *) xo_pool + cur)->userid);
    break;
#endif

  case XZ_BMW:
    preview_userid(((BMW *) xo_pool + cur)->userid);
    break;

  /* ------------ */
  /* é è¦½æ–‡ç« ä¿¡ä»¶ */
  /* ------------ */
  case XZ_XPOST:
  case XZ_MBOX:
  case XZ_POST:
    {
      HDR *hdr;
      hdr = (HDR *) xo_pool + cur;
      if (hdr->xmode & POST_RESTRICT)
        break;
      hdr_fpath(fpath, xo->dir, hdr);
      preview_file(fpath, 4);
    }
    break;

  /* ------------ */
  /* é è¦½æ–‡ç«      */
  /* ------------ */
#ifdef HAVE_SONG
  case XZ_SONG:
#endif
  case XZ_GEM:
    {
      HDR *hdr;
      hdr = (HDR *) xo_pool + cur;
      if (hdr->xmode & (GEM_FOLDER | GEM_RESTRICT))
        break;
      hdr_fpath(fpath, xo->dir, hdr);
      preview_file(fpath, 4);
    }
    break;

  /* ------------ */
  /* é è¦½ Tip     */
  /* ------------ */
  case XZ_VOTE:
#ifdef MY_FAVORITE
  case XZ_MF:
#endif
#ifdef HAVE_COSIGN
  case XZ_COSIGN:
#endif
#ifdef HAVE_XYNEWS
  case XZ_NEWS:
#endif
    preview_tip();
    break;
  }
}

