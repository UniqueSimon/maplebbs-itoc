: struct.h   // 抓 1-bit 給 replied

typedef struct
{
  time_t btime;
  UTMP *caller;                 /* who call-in me ? */
  int sender;                   /* calling userno */
  int recver;                   /* called userno */
  char userid[IDLEN + 1 + 2];   /* itoc.010529: 保留 2 byte 給廣播符號 > */
- char msg[69];                 /* 水球 */
+ char msg[68];                 /* 水球 */
+ char replied;                 /* 1: 已回水球 */
}      BMW;                     /* bbs message write */

