#include "bbs.h"


#define LYNX_PATH       "/usr/local/bin/lynx --source"  /* lynx çš„çµ•å°è·¯å¾‘ */


/*-------------------------------------------------------*/
/* BRD shm éƒ¨åˆ†é ˆèˆ‡ cache.c ç›¸å®¹                         */
/*-------------------------------------------------------*/


static BCACHE *bshm;

static void
init_bshm()
{
  /* itoc.030727: åœ¨é–‹å•Ÿ bbsd ä¹‹å‰ï¼Œæ‡‰è©²å°±è¦åŸ·è¡Œé accountï¼Œ
     æ‰€ä»¥ bshm æ‡‰è©²å·²è¨­å®šå¥½ */

  bshm = shm_new(BRDSHM_KEY, sizeof(BCACHE));

  if (bshm->uptime <= 0)        /* bshm æœªè¨­å®šå®Œæˆ */
    exit(0);
}


static void
update_btime(brdname)
  char *brdname;
{
  BRD *bhdr, *tail;

  bhdr = bshm->bcache;
  tail = bhdr + bshm->number;
  do
  {
    if (!str_cmp(brdname, bhdr->brdname))
    {
      bhdr->btime = -1;
      break;
    }
  } while (++bhdr < tail);
}


/*-------------------------------------------------------*/
/* ç™¼æ–‡åˆ°çœ‹æ¿                                            */
/*-------------------------------------------------------*/


static char *Brdname = "NCTU_news";     /* æ¬² post çš„çœ‹æ¿ */
static char *Userid = "äº¤å¤§æ ¡åœ’å…¬å‘Š";   /* ä½œè€… */
static char *Username = "è¯åˆæœå‹™ä¸­å¿ƒ"; /* æš±ç¨± */


static void
new_post(fpath, title)           /* ç™¼æ–‡åˆ°çœ‹æ¿ */
  char *fpath;          /* æª”æ¡ˆè·¯å¾‘ */
  char *title;          /* æ–‡ç« æ¨™é¡Œ */
{
  HDR hdr;
  char folder[64];

  brd_fpath(folder, Brdname, FN_DIR);
  hdr_stamp(folder, HDR_LINK | 'A', &hdr, fpath);
  strcpy(hdr.owner, Userid);
  strcpy(hdr.nick, Username);
  strcpy(hdr.title, title);
  rec_add(folder, &hdr, sizeof(HDR));

  update_btime(Brdname);
}


/*-------------------------------------------------------*/
/* æŠ“ç¶²é                                                 */
/*-------------------------------------------------------*/


static int wlen;    /* æœ¬è¡Œæœ‰å¤šå°‘å­— */
static int slen;    /* æœ¬è¡Œæœ‰å¤šå°‘åŠå‹å­— */


static void
foutc(ch, fp)
  int ch;
  FILE *fp;
{
  static int in_tag = 0;    /* 1: åœ¨ <tag> ä¸­ */
  static int in_chi = 0;    /* 1: å‰ä¸€ç¢¼æ˜¯ä¸­æ–‡å­— */

  if (ch == '<')
  {
    in_tag = 1;
    return;
  }

  /* è·³é \t */
  if (ch == '\t')
    return;

  if (!in_tag)
  {
    if (in_chi)         /* å‰ä¸€å€‹charæ˜¯ä¸­æ–‡å­—çš„ç¬¬ä¸€ç¢¼ */
      in_chi = 0;
    else if (ch & 0x80)     /* å‰ä¸€å€‹charä¸æ˜¯ä¸­æ–‡å­—çš„ç¬¬ä¸€ç¢¼ï¼Œ */
      in_chi = 1;           /* æª¢æŸ¥é€™charæ˜¯å¦ç‚ºä¸­æ–‡å­—çš„ç¬¬ä¸€ç¢¼ */
    else            /* å¦‚æœéƒ½ä¸æ˜¯ï¼Œè¡¨ç¤ºé€™charæ˜¯åŠå‹å­— */
      slen++;

    if (wlen >= 60 - slen % 2)  /* ä¸€è¡Œæœ€å¤š 60 å­—ï¼Œè‹¥æœ‰å¥‡æ•¸å€‹åŠå‹å­—ï¼Œ*/
    {                           /* è©²è¡Œåªå° 59 å­— */
      fputs("\n    ", fp);  /* æ¯è¡Œå‰é¢éƒ½ç©ºå››æ ¼ */
      wlen = 0;
      /* slen = 0; */
      slen = !in_chi;       /* è‹¥æ–°çš„é€™è¡Œç¬¬ä¸€å€‹charæ˜¯åŠå‹å­—ï¼Œslen=1 */
    }

    fputc(ch, fp);
    wlen++;
  }
  else
  {
    if (ch == '>')
      in_tag = 0;
  }
}


static void
fouts(str, fp)
  uschar *str;
  FILE *fp;
{
  int ch;

  wlen = 0;
  slen = 0;
  fputs("\n    ", fp);      /* æ¯è¡Œå‰é¢éƒ½ç©ºå››æ ¼ */

  while (ch = *str)
  {
    foutc(ch, fp);
    str++;
  }
}


static void
strip_title(str, title)
  uschar *str, *title;
{
  int ch, len = 0;
  uschar *dst;

  /* å»æ‰ str ä¸­çš„ \t åŠæœ€å¾Œçš„ <tag>ï¼Œå­˜åœ¨ title */

  dst = title;
  while (ch = *str++)
  {
    if (ch == '<')
      break;

    if (ch != '\t')
    {
      *dst++ = ch;
      if (++len > 60)
        break;
    }
  }
  *dst = '\0';
}


static void
html_download(actno)          /* ä¸‹è¼‰æ–‡ç« ä¸¦è½‰æ›ç‚ºæ–‡å­—æª” */
  int actno;
{
  char link[128], title[TTLEN + 1];
  char buf[2048];       /* å‡è¨­æ–‡ç« æ¯æ®µä¸æœƒè¶…é 2048 å­— */
  char *fsrc = "tmp/NCTUnews.src";
  char *fdst = "tmp/NCTUnews.dst";
  FILE *fpr, *fpw;
  int mode;
  char *ptr;

  /* ä¸‹è¼‰æ–‡ç«  */
  sprintf(link, "http://info.nctu.edu.tw/news/show_news.php?act_no=%d", actno);
  sprintf(buf, LYNX_PATH " %s > %s", link, fsrc);
  system(buf);

  /* è½‰æ›ç‚ºæ–‡å­—æª” */
  if (fpr = fopen(fsrc, "r"))
  {
    if (fpw = fopen(fdst, "w"))
    {
      /* é–‹é ­åŠ ä¸Šæª”é ­ */
      while (fgets(buf, sizeof(buf), fpr))
      {
        /* <font size="2"> çš„ä¸‹ä¸€è¡Œå°±æ˜¯æ¨™é¡Œ */
        if (strstr(buf, "<font size=\"2\">"))
        {
          if (fgets(buf, sizeof(buf), fpr))
          {
            strip_title(buf, title);

            fprintf(fpw, "%s %s (%s) %s %s\n",
              STR_AUTHOR1, Userid, Username, STR_POST2, Brdname);
            fprintf(fpw, "æ¨™é¡Œ: %s\næ™‚é–“: %s\n\n", title, Now());
          }
          break;
        }
      }

      /* å…§å®¹ */
      mode = 0;    /* 0:æœªé–‹å§‹  1:å°åˆ°ä¸€åŠ  2:çµæŸ */
      while (fgets(buf, sizeof(buf), fpr))
      {
        if (ptr = strstr(buf, "<hr>"))
        {
          *ptr = '\0';
          mode++;

          if (mode == 1)  /* ç¬¬ä¸€æ¬¡å‡ºç¾ <hr> ç„¡å…§æ–‡ */
            continue;
        }

        if (mode)
        {
          fouts(buf, fpw);
          if (mode == 2)
            break;
        }
      }

      /* çµå°¾åŠ ä¸Šä¾†æº */
      fprintf(fpw, "\n--\nNCTU! äº¤é€šå¤§å­¸æ ¡åœ’æ´»å‹•å…¬å‘Š\n%s\n", link);
      fclose(fpw);

      if (title[0])     /* è‹¥ç„¡æ¨™é¡Œï¼Œä¹Ÿè¨±æ˜¯è¢«åˆªé™¤äº† */
        new_post(fdst, title);
      unlink(fdst);
    }
    unlink(fsrc);
  }
}


/*-------------------------------------------------------*/
/* ä¸»ç¨‹å¼                                                */
/*-------------------------------------------------------*/


static int
urhigh_query()
{
  char *ftmp = "tmp/NCTUnews.tmp";
  char buf[512];       /* å‡è¨­æ¯è¡Œä¸æœƒè¶…é 512 å­— */
  char *ptr;
  FILE *fp;
  int high;

  high = 0;
  sprintf(buf, LYNX_PATH " http://info.nctu.edu.tw/news/list.php > %s", ftmp);
  system(buf);

  if (fp = fopen(ftmp, "r"))
  {
    while (fgets(buf, sizeof(buf), fp))
    {
      if (ptr = strstr(buf, "show_news.php?act_no="))
      {
        high = atoi(ptr + 21);
        break;
      }
    }

    fclose(fp);
    unlink(ftmp);
  }
  return high;
}


int
main()
{
  FILE *fp;
  int myhigh, urhigh;
  char buf[10];

  chdir(BBSHOME);

  /* çœ‹è‡ªå·±æŠ“åˆ°ç¬¬å¹¾ç¯‡äº† */
  myhigh = 0;
  if (fp = fopen("run/NCTUnews", "r"))
  {
    fscanf(fp, "%8s", buf);
    fclose(fp);

    if ((urhigh = atoi(buf)) > 0)
      myhigh = urhigh;
  }

  /* çœ‹è¯åˆæœå‹™ä¸­å¿ƒæœ€æ–°çš„æœ‰å¹¾ç¯‡ */
  urhigh = urhigh_query();

  if (!myhigh)           /* å¦‚æœè‡ªå·±æ²’æœ‰ç¯‡æ•¸è¨ˆæ•¸å™¨ï¼Œé‚£å°±æŠ“æœ€å¾Œä¸‰ç¯‡ */
    myhigh = urhigh - 3;

  if (myhigh >= urhigh)  /* æ²’æœ‰æ–°å…¬å‘Š */
    return 0;

  init_bshm();

  /* å»æŠ“æ–°çš„å…¬å‘Š */
  for (myhigh++; myhigh <= urhigh; myhigh++)
    html_download(myhigh);

  /* æ›´æ–°è‡ªå·±çš„ç¯‡æ•¸è¨ˆæ•¸å™¨ */
  if (fp = fopen("run/NCTUnews", "w"))
  {
    fprintf(fp, "%d", urhigh);
    fclose(fp);
  }

  return 0;
}

