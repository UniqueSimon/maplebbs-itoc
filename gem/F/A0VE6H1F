: xover.c:every_TAB() 新增於 every_U() 後面

static int
every_TAB(zone)
  int zone;
{
  int cmd;
  char fpath[64];

  /* 已經在 every_Z 中的話就不能跳 */
  if (z_status)
    return XO_NONE;

  /* 依序跳往 看板/精華區/使用者名單 */

  switch (zone)
  {
  case XZ_POST:
    gem_fpath(fpath, currboard, fn_dir);
    if (rec_num(fpath, sizeof(HDR)) > 0)
      cmd = 'z';            /* 呼叫 post_gem() */
    else
      cmd = XZ_ULIST;       /* 若精華區是空的，進使用者名單 */
    break;

  case XZ_GEM:
    cmd = XZ_ULIST;
    break;

  case XZ_ULIST:
    if (xz[XZ_POST - XO_ZONE].xo)       /* 若已選定看板，進入看板，否則不動 */
    {
      cmd = brd_bno(currboard);
      XoPost(cmd);
      cmd = XZ_POST;
    }
    else
    {
      cmd = XO_NONE;
    }
    break;
  }

  return cmd;
}

