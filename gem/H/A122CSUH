- prints(NECKER_POST, d_cols, "", currbattr & BRD_NOSCORE ? "╳" : "○",
-   bshm->mantime[currbno]);
+ prints(NECKER_POST, d_cols, "", currbattr & BRD_NOSCORE ? "╳" : "○",
+   utmp_brdmate(currboard));

: board.c:class_item()

  /* 處理 人氣 */
- bno = bshm->mantime[bno];
+ bno = utmp_brdmate(brd->brdname);

