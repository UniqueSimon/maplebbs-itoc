static newsfeeds_t *
search_newsfeeds_byboard(board, pos)
  char *board;
  int *pos;
{
  newsfeeds_t *find;
  int i;

  for (i = *pos; i < NFCOUNT; i++)
  {
    find = NEWSFEEDS + i;
    if (!strcmp(find->board, board) && !(find->xmode & INN_NOOUTGO))
    {
      *pos = i + 1;
      return find;
    }
  }
  return NULL;
}

