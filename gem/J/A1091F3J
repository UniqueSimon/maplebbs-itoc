: rec_article.c:search_newsfeeds_bygroup() æ”¹æˆé€™æ¨£

#ifndef _NoCeM_
static
#endif
newsfeeds_t *
search_newsfeeds_bygroup(newsgroup, pos)
  char *newsgroup;
  int *pos;         /* å¾ç¬¬ pos ç­†é–‹å§‹å¾€ä¸‹æ‰¾ */
{
  newsfeeds_t *find;
  int i;

  for (i = *pos; i < NFCOUNT; i++)
  {
    find = NEWSFEEDS + i;
    if (!strcmp(find->newsgroup, newsgroup) && !(find->xmode & INN_NOINCOME))
    {
      *pos = i + 1;
      return find;
    }
  }
  return NULL;
}

