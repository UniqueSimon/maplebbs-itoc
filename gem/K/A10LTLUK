+ int ftypeI = ulist_ftype[(*i) - ushm->uslot];
+ int ftypeJ = ulist_ftype[(*j) - ushm->uslot];
+ int k = ((ftypeI|ftypeJ) == (FTYPE_SELF|FTYPE_BOTHGOOD)) ? 0 : ftypeI-ftypeJ;
  return k ? k : ... ;

