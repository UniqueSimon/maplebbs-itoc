+   for (x = MENU_XPOS; x <= MENU_XPOS + AD_LINE; x++)
+   {
+     move(x, 42);              /* 放在選單的右邊 */
+     outs(fshm->ad[i++]);
+   }
    film_out(FILM_MOVIE, MENU_XNOTE);
+ }

