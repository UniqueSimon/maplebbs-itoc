static char *
strstr2(big, little)
  char *big, *little;
{
  char *str;

  /* è‹¥æœ‰ strstr(big, little) æŠŠæŒ‡æ¨™æ”¾åœ¨æœ€å¾Œçš„ä¸‹ä¸€æ ¼ */
  if (str = strstr(big, little))
    return str + strlen(little);

  return NULL;
}


static int wlen;    /* æœ¬è¡Œæœ‰å¤šå°‘å­— */


static int
foutc(fp, ch)
  FILE *fp;
  int ch;
{
  if (ch == '<' || ch == '\n' || ch == '\0')
  {
    ch = '\0';
  }
  else
  {
    if (++wlen > 60)    /* ä¸€è¡Œåªå° 60 å­— */
    {
      fprintf(fp, "\n          ");
      wlen = 0;
    }
    fprintf(fp, "%c", ch);
  }

  return ch;
}


static void
fouts(fp, str)      /* å°å‡º str */
  FILE *fp;
  char *str;
{
  int ch;

  wlen = 0;

  while (ch = *str)
  {
    if (!foutc(fp, ch))
      break;
    str++;
  }
}


static void
fprints(fp, str)
  FILE *fp;
  char *str;
{
  static int line = 0;

  line = (line + 1) % 5;

  if (line == 1)    /* Date */
  {
    fprintf(fp, "æ’¥å‡ºæ™‚é–“ï¼š");
    fouts(fp, str);
  }
  else if (line == 2)   /* Time */
  {
    fprintf(fp, "  ");
    fouts(fp, str);
  }
  else if (line == 3)   /* Sport */
  {
    fprintf(fp, "  ");
    fouts(fp, str);
    fprintf(fp, "\n");
  }
  else if (line == 4)   /* Event Title */
  {
    fprintf(fp, "ç¯€ç›®å…§å®¹ï¼š");
    fouts(fp, str);
    fprintf(fp, "\n");
  }
  else          /* Duration */
  {
    fprintf(fp, "ç¯€ç›®æ­·æ™‚ï¼š");
    fouts(fp, str);
    fprintf(fp, "\n" MSG_SEPERATOR "\n");
  }
}


static void
html_fetch(fpath, fpw, now, year, month)
  char *fpath;
  FILE *fpw;
  time_t now;
  int year, month;
{
  FILE *fpr;
  char buf[256], *str;

  if (!(fpr = fopen(fpath, "r")))
    return;

  fprintf(fpw, "ä½œè€…: %s (%s) ç«™å…§: ESPN ç¯€ç›®\n", cuser.userid, cuser.username);
  fprintf(fpw, "æ¨™é¡Œ: ESPN ç¯€ç›®è¡¨ (%d/%02d)\n", year, month);
  fprintf(fpw, "æ™‚é–“: %s\n\n", Btime(&now));

  while (fgets(buf, 256, fpr))
  {
    if (str = strstr2(buf, "<td nowrap class=\"TDBODY"))
    {
      str += 3;
      fprints(fpw, str);
    }
    else if (str = strstr2(buf, "<td class=\"TDBODY"))
    {
      str += 3;
      if (!str_ncmp(str, "<b>", 3)) /* è·³é </b> */
        str += 3;
      fprints(fpw, str);
    }
  }

  fclose(fpr);

  fprintf(fpw, "\n--\nè³‡æ–™ä¾†æºï¼šESPN\n");
}


